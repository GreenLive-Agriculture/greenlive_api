	/*@Query("select k from kit k where id_kit in (select culture_kit_id_kit from cultures inner join kit_kit_culture on cultures.culture_user_id_user = kit_kit_culture.kit_culture_id_culture where culture_user_id_user = :user_id)")*/
	@Query("SELECT u FROM User u WHERE u.status = 1")
